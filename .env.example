# Example environment variables for local testing
# Copy this file to .env and fill in your values

# ===========================================
# EXCHANGE SETTINGS
# ===========================================
# The bot uses multi-exchange fallback: Binance -> Bybit -> OKX
# Binance API credentials are OPTIONAL (will fallback to Bybit/OKX if unavailable)
# Bybit and OKX use public endpoints that don't require API keys

# Binance API credentials (optional - leave empty to use fallback exchanges)
BINANCE_API_KEY=
BINANCE_API_SECRET=

# Exchange preference: auto, binance, bybit, okx
# 'auto' will try Binance first, then fallback to Bybit, then OKX
PREFERRED_EXCHANGE=auto

# ===========================================
# TELEGRAM SETTINGS (REQUIRED)
# ===========================================
# Get bot token from @BotFather
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
# Get chat ID by sending a message to your bot and checking:
# https://api.telegram.org/bot<YOUR_BOT_TOKEN>/getUpdates
TELEGRAM_CHAT_ID=your_telegram_chat_id

# ===========================================
# ANALYSIS SETTINGS (optional - defaults shown)
# ===========================================
TIMEFRAMES=1h,4h
TOP_COINS_COUNT=20
MIN_SIGNAL_SCORE=7.0

# Technical indicator settings (optional)
RSI_OVERSOLD=30
RSI_OVERBOUGHT=70
EMA_SHORT_PERIOD=12
EMA_LONG_PERIOD=26
VOLUME_SPIKE_THRESHOLD=2.0

# Funding rate thresholds (optional)
FUNDING_EXTREME_POSITIVE=0.1
FUNDING_EXTREME_NEGATIVE=-0.1

# Liquidation threshold in USD (optional)
LIQUIDATION_THRESHOLD_USD=1000000
